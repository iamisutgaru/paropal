clear Lock
clear Control
clear Mod1

! use xev(1) to determine keycodes

keycode 9 = Caps_Lock

keycode 66 = Escape

keycode 130 = Control_L
keycode 131 = Control_R

keycode 64 = Alt_L
keycode 108 = Alt_R

add Lock = Caps_Lock
add Control = Control_L
add Control = Control_R
add Mod1 = Alt_L
add Mod1 = Alt_R
